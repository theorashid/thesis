@article{ezzatiReversalFortunesTrends2008,
  title = {The {{Reversal}} of {{Fortunes}}: {{Trends}} in {{County Mortality}} and {{Cross-County Mortality Disparities}} in the {{United States}}},
  shorttitle = {The {{Reversal}} of {{Fortunes}}},
  author = {Ezzati, Majid and Friedman, Ari B. and Kulkarni, Sandeep C. and Murray, Christopher J. L.},
