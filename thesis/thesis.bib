@article{asariaTrendsInequalitiesCardiovascular2012,
  title = {Trends and Inequalities in Cardiovascular Disease Mortality across 7932 {{English}} Electoral Wards, 1982\textendash 2006: {{Bayesian}} Spatial Analysis},
  shorttitle = {Trends and Inequalities in Cardiovascular Disease Mortality across 7932 {{English}} Electoral Wards, 1982\textendash 2006},
  author = {Asaria, Perviz and Fortunato, Lea and Fecht, Daniela and Tzoulaki, Ioanna and Abellan, Juan Jose and Hambly, Peter and {de Hoogh}, Kees and Ezzati, Majid and Elliott, Paul},
  year = {2012},
  month = dec,
  journal = {International Journal of Epidemiology},
  volume = {41},
