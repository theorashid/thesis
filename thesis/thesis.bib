@article{wakefieldIssuesStatisticalAnalysis1999,
  title = {Issues in the Statistical Analysis of Small Area Health Data},
  author = {Wakefield, Jon and Elliott, Paul},
  year = {1999},
  journal = {Statistics in Medicine},
  volume = {18},
  number = {17-18},
